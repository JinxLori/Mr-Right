<?xml version="1.0" encoding="utf-8"?>
<set>
    <rotate
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="300"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="+180" />
        <!-- toDegrees设置旋转角度
         duration设置旋转时间
         android:repeatCount="infinite" 设置重复-->
</set>
